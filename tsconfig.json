{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "sourceMap": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@core/*": [
                "src/core/*"
            ]
        },
        "rootDir": "src",
        "outDir": "dist",
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src"
    ]
}